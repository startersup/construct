{
  "name": "PurchaseOrder",
  "plural": "purchase_order",
  "base": "PersistedModel",
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuid"
    },
    "order_no": {
      "type": "Number",
      "required":true
    },
    "name": {
      "type": "string"
    },
    "date_ordered": {
      "type": "date",
      "mysql": {
        "dataType": "TIMESTAMP"
      }
    },
    "date_requested": {
      "type": "date",
      "mysql": {
        "dataType": "TIMESTAMP",
        "default": "CURRENT_TIMESTAMP"
      }
    },
    "date_recieved": {
      "type": "date",
      "mysql": {
        "dataType": "TIMESTAMP"
      }
    },
    "comments": {
      "type": "string"
    }
  },
  "mixins": {
    "CreatedModifiedInjection": true
  },
  "validations": [],
  "relations": {
    "sites": {
      "type": "belongsTo",
      "model": "Site",
      "foreignKey": "site"
    },
    "vendors": {
      "type": "belongsTo",
      "model": "Vendor",
      "foreignKey": "vendor"
    },
    "products": {
      "type": "hasMany",
      "model": "Inventory",
      "foreignKey": "order_id",
      "keyThrough": "item_id",
      "through": "PurchaseOrderInfo"
    },
    "purchase_status": {
      "type": "belongsTo",
      "model": "PurchaseStatus",
      "foreignKey": "status"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
