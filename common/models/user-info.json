{
  "name": "UserInfo",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuid"
    },
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "salary": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "realm": false,
    "username": false
  },
  "validations": [],
  "relations": {
    "departments": {
      "type": "belongsTo",
      "model": "Department",
      "foreignKey": "department"
    },
    "sites": {
      "type": "belongsTo",
      "model": "Site",
      "foreignKey": "site"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
