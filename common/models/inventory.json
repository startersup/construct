      "mysql": {
        "columnName": "itemName",
        "dataType": "VARCHAR",
        "dataLength": 100,
        "nullable": "N"
      }
    },
    "total": {
      "type": "number",
      "required": true,
      "mysql": {
        "dataType": "FLOAT"
      }
    },
    "gst": {
      "type": "number",
      "mysql": {
        "columnName": "gst",
        "dataType": "FLOAT"
      }
    },
    "cgst": {
      "type": "number",
      "mysql": {
        "columnName": "cgst",
        "dataType": "FLOAT"
      }
    },
    "count": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "sites": {
      "type": "belongsTo",
      "model": "Site",
      "foreignKey": "site"
